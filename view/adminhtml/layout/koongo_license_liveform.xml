<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
    	<referenceContainer name="page.main.actions">
            <block class="Nostress\Koongo\Block\Adminhtml\Help\Tooltip" name="help" as="help">
            	<action method="setKey">
                    <argument name="params" xsi:type="string">activate_live</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Nostress\Koongo\Block\Adminhtml\Help\Form" name="help_form">
            	<action method="setHelpMode">
                    <argument name="params" xsi:type="string">live</argument>
                </action>
            </block>
            <block class="Nostress\Koongo\Block\Adminhtml\License\Activate\Live" name="live_form"/>           
        </referenceContainer>            
    </body>
</page>
